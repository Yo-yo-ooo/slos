#ifndef IOSFWD
#define IOSFWD

#include <inc/lib.h>
#include <inc/cpp/string>

using namespace std;


class ostream{
public:
    void operator << (char *msg)const;
    void operator << (int value)const;
    void operator << (float d)const;
    void operator << (double d)const;
};

class istream
{
public:
    void operator << (char *a)const;
    void operator << (String str)const;
    void operator >> (char *a)const;
    void operator >> (String str)const;
};


#endif