#ifndef IOSTREAM
#define IOSTREAM

#include <inc/cpp/iosfwd>
#include <inc/malloc.h>

namespace std{

extern istream cin;
extern ostream cout;
extern ostream cerr;
extern ostream clog;
    
}

#ifdef CPP_NEW_INSERT
void * operator new (size_t size)
{
    if(void * mem = malloc(size))
        return mem;
    else
        return;
}
void operator delete(void *mem) noexcept
{
    free(mem);
}
#endif

#endif